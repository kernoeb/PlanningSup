{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PlanningSup",
  "version": "0.1.0",
  "identifier": "com.planningsup.desktop",
  "build": {
    "beforeDevCommand": "bun run dev-vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PlanningSup",
        "width": 1280,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        {
          "scheme": ["planningsup"],
          "appLink": false
        }
      ],
      "desktop": {
        "schemes": ["planningsup"]
      }
    }
  }
}
