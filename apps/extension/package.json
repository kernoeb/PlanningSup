{
  "name": "planningsup-extension",
  "displayName": "PlanningSup",
  "version": "0.0.1",
  "private": true,
  "description": "The official PlanningSup browser extension",
  "scripts": {
    "dev": "export VITE_BACKEND_URL=http://localhost:20000 && bun run clear && cross-env NODE_ENV=development concurrently bun:dev:*",
    "dev-firefox": "bun run clear && cross-env NODE_ENV=development EXTENSION=firefox bun:dev:*",
    "dev:prepare": "bun scripts/prepare.ts",
    "dev:background": "bun run build:background -- --mode development",
    "dev:web": "bunx --bun vite",
    "build": "export NODE_ENV=production && bun run clear && bun run build:web && bun run build:prepare && bun run build:background",
    "build:prepare": "bun scripts/prepare.ts",
    "build:background": "bunx --bun vite build --config vite.config.background.mts",
    "build:web": "bunx --bun vite build",
    "pack": "cross-env NODE_ENV=production concurrently bun:pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint --cache .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.2",
    "@ffflorian/jszip-cli": "^3.8.6",
    "@tailwindcss/vite": "^4.1.13",
    "@types/bun": "^1.2.21",
    "@types/fs-extra": "^11.0.4",
    "@types/webextension-polyfill": "^0.12.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "chokidar": "^4.0.3",
    "cross-env": "^10.0.0",
    "crx": "^5.0.1",
    "daisyui": "^5.1.8",
    "eslint": "^9.35.0",
    "fs-extra": "^11.3.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "npm:rolldown-vite@latest",
    "vue": "^3.5.21",
    "web-ext": "^8.9.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.12.0"
  }
}
