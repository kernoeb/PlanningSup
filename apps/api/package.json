{
  "name": "server",
  "type": "module",
  "private": true,
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "generate-better-auth": "NO_MIGRATE=true bunx --bun @better-auth/cli generate --config src/utils/auth.ts --output ./src/db/schemas/auth.ts --yes",
    "generate-drizzle": "NO_MIGRATE=true bun run --bun drizzle-kit generate",
    "lint": "bunx --bun eslint .",
    "lint-fix": "bunx --bun eslint . --fix",
    "build": "bun run scripts/build",
    "typecheck": "bunx --bun tsc --noEmit"
  },
  "dependencies": {
    "@better-auth/passkey": "^1.4.10",
    "@elysiajs/cors": "1.4.1",
    "@elysiajs/html": "1.4.0",
    "@elysiajs/openapi": "1.4.14",
    "@elysiajs/static": "1.4.7",
    "@logtape/logtape": "2.0.2",
    "better-auth": "catalog:",
    "dayjs": "1.11.19",
    "drizzle-orm": "0.45.1",
    "drizzle-typebox": "0.3.3",
    "elysia": "catalog:",
    "ical.js": "2.2.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "bun-types": "catalog:types",
    "config": "workspace:*",
    "drizzle-kit": "0.31.9",
    "eslint": "catalog:dev",
    "pg": "8.18.0"
  },
  "overrides": {
    "@sinclair/typebox": "0.34"
  }
}
