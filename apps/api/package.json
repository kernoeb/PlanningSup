{
  "name": "server",
  "type": "module",
  "private": true,
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "generate-better-auth": "NO_MIGRATE=true bunx --bun @better-auth/cli generate --config src/utils/auth.ts --output ./src/db/schemas/auth.ts --yes",
    "generate-drizzle": "NO_MIGRATE=true bun run --bun drizzle-kit generate",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "build": "bun run scripts/build",
    "typecheck": "bunx --bun tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.2",
    "@elysiajs/static": "^1.4.0",
    "@logtape/logtape": "1.0.5",
    "better-auth": "^1.3.9",
    "dayjs": "^1.11.18",
    "drizzle-orm": "^0.44.5",
    "drizzle-typebox": "^0.3.3",
    "elysia": "catalog:",
    "ical.js": "^2.2.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/bun": "catalog:types",
    "config": "workspace:*",
    "drizzle-kit": "^0.31.4",
    "pg": "^8.16.3"
  },
  "overrides": {
    "@sinclair/typebox": "0.34"
  }
}
