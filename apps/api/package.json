{
  "name": "server",
  "type": "module",
  "private": true,
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "generate-better-auth": "NO_MIGRATE=true bunx --bun @better-auth/cli generate --config src/utils/auth.ts --output ./src/db/schemas/auth.ts --yes",
    "generate-drizzle": "NO_MIGRATE=true bun run --bun drizzle-kit generate",
    "lint": "bunx --bun eslint .",
    "lint-fix": "bunx --bun eslint . --fix",
    "build": "bun run scripts/build",
    "typecheck": "bunx --bun tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "1.4.0",
    "@elysiajs/html": "1.4.0",
    "@elysiajs/openapi": "1.4.11",
    "@elysiajs/static": "1.4.7",
    "@logtape/logtape": "1.2.2",
    "better-auth": "catalog:",
    "dayjs": "1.11.19",
    "drizzle-orm": "0.45.1",
    "drizzle-typebox": "0.3.3",
    "elysia": "catalog:",
    "ical.js": "2.2.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "6.6.1",
    "@types/bun": "catalog:types",
    "config": "workspace:*",
    "drizzle-kit": "0.31.8",
    "eslint": "9.39.2",
    "pg": "8.16.3"
  },
  "overrides": {
    "@sinclair/typebox": "0.34"
  }
}
