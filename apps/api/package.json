{
  "name": "server",
  "type": "module",
  "private": true,
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "generate-better-auth": "bunx --bun @better-auth/cli generate --output ./src/db/schemas/auth.ts --yes",
    "generate-drizzle": "bun run --bun drizzle-kit generate",
    "docker-pg-test": "docker run --name drizzle-postgres -e POSTGRES_DB=planningsup -e POSTGRES_PASSWORD=mypassword -d -p 5432:5432 postgres:17",
    "stop-docker-pg-test": "docker stop drizzle-postgres && docker rm drizzle-postgres",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/index.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/openapi": "^1.3.10",
    "@elysiajs/static": "^1.3.0",
    "@logtape/logtape": "^1.0.4",
    "better-auth": "^1.3.8",
    "dayjs": "^1.11.18",
    "drizzle-orm": "^0.44.5",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.3.21",
    "ical.js": "^2.2.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "config": "workspace:*",
    "drizzle-kit": "^0.31.4",
    "pg": "^8.16.3"
  },
  "overrides": {
    "@sinclair/typebox": "0.34"
  }
}
