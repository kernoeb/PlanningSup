{
  "language_servers": [
    "vtsls",
    "eslint",
    "color-lsp",
    "tailwindcss-language-server",
    "json-language-server"
  ],
  "languages": {
    "Vue.js": {
      "language_servers": ["vtsls", "vue-language-server"],
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  }
}
