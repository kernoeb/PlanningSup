{
  "extends": "../packages/config/typescript/base.json",
  "compilerOptions": {
    "baseUrl": "..",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["bun-types"],
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@api": ["apps/api/src/index.ts"],
      "@api/*": ["apps/api/src/*"],
      "@web/*": ["apps/web/src/*"],
      "@libs": ["packages/libs/src/index.ts"],
      "@libs/*": ["packages/libs/src/*"],
      "@plannings": ["resources/plannings"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
